@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Simple Bank</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <style>
        body {
            background: url('https://images.unsplash.com/photo-1633158829875-e5316a358c6f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1170&q=80') no-repeat center bottom fixed;
            background-size: cover;
            color: #000;
            background-color: rgba(32, 35, 41, 0.8);
        }

        .container {
            max-width: 400px;
            margin: 0 auto;
            text-align: center;
            padding-top: 100px;
            border-radius: 10px;
        }

        .btn-fancy {
            background-color: rgba(0, 0, 0, 0);
            border: 2px solid rgba(0, 0, 0, 0);
            color: #000;
            padding: 20px 30px;
            font-size: 24px;
            border-radius: 10px;
            margin: 10px;
            cursor: pointer;
            transition: background-color 0.3s ease, border-color 0.3s ease, transform 0.2s ease;
        }

            .btn-fancy:hover {
                background-color: rgba(0, 0, 0, 0);
                border-color: rgba(0, 0, 0, 0);
                transform: scale(1.05);
            }


            .btn-fancy a {
                color: #000;
                text-decoration: none;
            }


        .dark-text {
            color: #000;
        }
    </style>
</head>
<body>

    <div class="container">
        <h2 class="dark-text">Welcome to CodeMonkeyBank</h2>
        <p class="dark-text">Your Trusted Banking Partner</p>
        <a asp-controller="Login" asp-action="Index" class="btn btn-fancy"><span class="dark-text">Login</span></a>
        <a asp-controller="Account" asp-action="Create" C class="btn btn-fancy"><span class="dark-text">Create User</span></a>
    </div>

    <!-- Link to Bootstrap JS (CDN) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
