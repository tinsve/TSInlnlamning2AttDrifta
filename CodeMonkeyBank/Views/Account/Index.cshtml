@model AccountModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bank Account Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css">
    <style>


        .card {
            border-radius: 0.5rem;
        }

        .avatar {
            width: 80px;
        }

        .account-info {
            background-color: transparent; 
            padding: 10px;
            border-radius: 0.5rem;
            backdrop-filter: blur(5px); 
        }

            .account-info h6 {
                font-weight: bold;
            }

        .balance {
            font-size: 2rem;
            font-weight: bold;
            color: #007bff;
        }


        body, html {
            background-image: url('https://img.freepik.com/free-photo/pink-background-with-palm-leaves-shadow_53876-110807.jpg?w=1380&t=st=1692727358~exp=1692727958~hmac=9b7249214d674414f4523942657e365e013e59830373505ddb5e5c0faacf8edb');
            background-size: cover;
            background-repeat: no-repeat;
            background-attachment: fixed;
            height: 100%;
            margin: 0;
            padding: 0;
        }


        .container {
            height: 100%;
        }


        .transparent-section {
            background-color: rgba(255, 255, 255, 0);
            border-radius: 0.5rem;
            backdrop-filter: blur(5px);
        }
    </style>
</head>
<body>
    <section class="vh-100">
        <div class="container d-flex justify-content-center align-items-center">
            <div class="col col-lg-6 mb-4 mb-lg-0">
                <div class="card mb-3 transparent-section">

                    <div class="row g-0">
                        <div class="col-md-4 gradient-custom text-center text-white"
                             style="border-top-left-radius: .5rem; border-bottom-left-radius: .5rem;">
                            <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-chat/ava1-bg.webp"
                                 alt="Avatar" class="img-fluid my-5" style="width: 80px;" />
                            <h5>Name</h5>
                            <p class="text-muted">@Model.FirstName @Model.LastName</p>
                            @* < p>Account Holder</p>  *@
                            @* <i class="far fa-edit mb-5"></i> kanske lägg till details här*@
                       </div> 
                        <div class="col-md-8">
                            <div class="card-body p-4">
                                <div class="account-info">
                                    <h6>Account Information</h6>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                        <div class="col-6 mb-3">
                                            <h6>Username</h6>
                                            <p class="text-muted">@Model.Username</p>
                                        </div>
                                        <div class="col-6 mb-3">
                                           @*  <h6>Account Number</h6>
                                            <p class="text-muted">123 456 789</p> *@
                                        </div>
                                    </div>
                                    <h6>Balance</h6>
                                    <p class="text-muted">@Model.Balance</p>
                                    <hr class="mt-0 mb-4">
                                    <div class="row pt-1">
                                    </div>
                                    <div class="d-grid gap-2 col-6 mx-auto mt-4">
                                        <a href="@Url.Action("Deposit", "Account")" class="btn btn-primary">Deposit</a>
                                        <a href="@Url.Action("Withdraw", "Account")" class="btn btn-primary">Withdraw</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
